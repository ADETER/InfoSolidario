	
<div class="text-center">
	<%= form_for @donacion, :html => { :multipart => true } do |f| %>
	<h1>Introduce los datos de la nueva donacion</h1><br>
<form role="role">
    <div class="form-group">
      <label for="tittle">Título: </label><br>
      <%= f.text_field :title %>
    </div>
	<div class="form-group">
		<label for="description">Descripcion: </label><br>
		<%= f.text_area :description%>
	</div>
	<div class="form-group">
		<label for="">Direccion (solo visible para ONG): </label><br>
		<%= f.text_area :direction%>

	</div>
	<div class="form-group">
		<label for="">Horario de recogida ( </label>
        <label for="">Mañana: </label>
		<%= f.radio_button :schedule, true, :checked => true %>
		<label for="">Tarde: </label>
		<%= f.radio_button :schedule, false%>
        <label for=""> )</label>

	</div>
	<div class="form-group">
		<label for="">Avatar:</label>
    	<div class="center-block">
    		<%= f.file_field :avatar %> <br>
    	</div> 
	</div>
	<div class="" style="visibility: hidden">
		<%= f.number_field :idDonante, :value => current_donante.id%> 
	</div>
	<div class="form-group">
		<%= f.submit "Guardar", class:"btn btn-primary"%>
	</div>
</form>

<%end%>

</div>
